<?xml version="1.0" ?>
<project name="DemoD3D" width=512 height=512>
    <assets>
        <constants>
            <constant name="RTSIZE" value=512 />
        </constants>

        <scenes>
            <scene name="MainScene">
                <file name="../Models/cornellBox/CornellBox-Sphere2.obj" />
            </scene>
        </scenes>
        
        <viewports>
            <viewport name="MainViewport">
                <CLEAR_COLOR r="0.5" g="0.5" b="0.5" />
            </viewport>
        </viewports>

        <cameras>
            <camera name="MainCamera" >
                <viewport name="MainViewport"/>
				<projection TYPE="PERSPECTIVE" FOV=60 NEAR=0.3 FAR=1000.0 />
				<POSITION x="0.0" y="0.75" z="2.5" />
				<VIEW x="0.0" y="0.0" z="-1.0"  />
			</camera>
        </cameras>

        <lights>
            <light name="Sun" >
				<POSITION x="-0.005" y="1.58" z="-0.03" />
				<DIRECTION x="0.0" y="-1.0" z="0.0" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.5" b="0.5" />
			</light>
        </lights>

        <materialLibs>
            <materialLib filename="raytracedreflections.mlib" />
        </materialLibs>
    </assets>

    <pipelines>
        <pipeline name="RTReflections" default="true" defaultCamera="MainCamera">
            <pass class="optix" name="RTReflections">
                <scenes>
                    <scene name="MainScene"/>
                </scenes>
                <camera name="MainCamera" />
                <!--renderTarget name="dxr" fromLibrary="Ray Traced Reflections" /-->
                <viewport name="MainViewport" />
                <lights>
                    <light name="Sun" />
                </lights>
                <optixEntryPoint>
                    <optixProgram type="RayGen" file="shaders/shader8.hlsl" proc="raygen" />
                </optixEntryPoint>
                <optixDefaultMaterial>
                    <optixProgram type="Closest_Hit" ray="Phong" file="shaders/shader8.hlsl" proc="shade"/> 
					<optixProgram type="Miss" 		 ray="Phong" file="shaders/shader8.hlsl" proc="miss"/>
                    <optixProgram type="Miss"        ray="Shadow" file="shaders/shader8.hlsl" proc="missShadow" />
                    <optixProgram type="Any_Hit"     ray="Shadow" file="shaders/shader8.hlsl" proc="anyHitShadow" />
                </optixDefaultMaterial>
                <optixMaterialMap>
                    <optixMap to="rightSphere">
                        <optixProgram type="Closest_Hit" ray="Phong" file="shaders/shader8.hlsl" proc="shadeGlass" />
                        <optixProgram type="Any_Hit" ray="Shadow" file="shaders/shader8.hlsl" proc="anyHitShadowGlass" />
                    </optixMap>
                    <optixMap to="leftSphere">
                        <optixProgram type="Closest_Hit" ray="Phong" file="shaders/shader8.hlsl" proc="shadeMetal" />
                        <optixProgram type="Any_Hit" ray="Shadow" file="shaders/shader8.hlsl" proc="anyHitShadowMetal" />
                    </optixMap>
                    <optixMap to="backWall">
                        <optixProgram type="Closest_Hit" ray="Phong" file="shaders/shader4.hlsl" proc="shadeMetal" />
                        <optixProgram type="Any_Hit" ray="Shadow" file="shaders/shader4.hlsl" proc="anyHitShadowMetal" />
                    </optixMap>
                    <optixMap to="light">
                        <optixProgram type="Closest_Hit" ray="Phong" file="shaders/shader8.hlsl" proc="shadeLight" />
                        <optixProgram type="Any_Hit" ray="Shadow" file="shaders/shader8.hlsl" proc="anyHitLight" />
                    </optixMap>
				</optixMaterialMap>
				<optixVertexAttributes>
					<attribute name="position"/>
					<attribute name="normal"/>
					<attribute name="texCoord0"/>
					<attribute name="index" />
				</optixVertexAttributes>
				<optixMaterialAttributes>
					<valueof optixVar="diffuse" type="COLOR" context="CURRENT" component="DIFFUSE" />
					<valueof optixVar="texCount" type="RENDERER" context="CURRENT" component="TEXTURE_COUNT" />
				</optixMaterialAttributes>
				<optixGlobalAttributes>
					<valueof optixVar="lightDir" type="LIGHT" context="CURRENT" id=0 component="DIRECTION" />
					<valueof optixVar="lightPos" type="LIGHT" context="CURRENT" id=0 component="POSITION" />
					<valueof optixVar="frameCount" type="RENDERER" context="CURRENT" component="FRAME_COUNT" />
				</optixGlobalAttributes>
            </pass>
        </pipeline>
    </pipelines>
</project>